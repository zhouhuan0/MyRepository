<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yks.springboot_shiro.mapper.UserMapper">
    <resultMap id="usermap" type="com.yks.springboot_shiro.pojo.User" >
        <id property="uid" column="uid" ></id>
        <result property="username" column="username"></result>
        <result property="password" column="password"></result>
        <collection property="roles" ofType="com.yks.springboot_shiro.pojo.Role" >
            <id property="rid" column="rid" ></id>
            <result property="rname" column="rname"></result>
            <collection property="modules" ofType="com.yks.springboot_shiro.pojo.Module">
                <id property="mid" column="mid" ></id>
                <result property="mname" column="mname"></result>
            </collection>
        </collection>
    </resultMap>



    <select id="findByUserName" parameterType="string" resultMap="usermap" >
      SELECT u.*,r.*,m.* FROM user u inner join user_role ur on ur.uid=u.uid
        inner join role r on r.rid=ur.rid
        inner join module_role mr on mr.rid=r.rid
        inner join module m on mr.mid=m.mid
        WHERE username=#{username};
    </select>
</mapper>